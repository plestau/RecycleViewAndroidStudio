<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageChessPiece"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textChessPieceName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10pt"
        app:layout_constraintStart_toEndOf="@+id/imageChessPiece"
        app:layout_constraintTop_toTopOf="@+id/imageChessPiece"
        app:layout_constraintBottom_toBottomOf="@+id/imageChessPiece"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
